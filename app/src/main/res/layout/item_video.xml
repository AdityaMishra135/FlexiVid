<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ripplefactor_without_corner"
    android:orientation="horizontal"
    android:padding="10dp">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/videoImageVideoItem"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/gif" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/videoNameVideoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_title"
            android:singleLine="true"
            android:text="Hip Hinge"
            android:textAllCaps="false"
            android:textColor="@color/ImageViewAndTextViewColour"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pathNameVideoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_date"
            android:singleLine="true"
            android:text="Downloads"
            android:textAllCaps="false"
            android:textColor="#737A91"
            android:textSize="15sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/videoDurationVideoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/font_title"
        android:singleLine="true"
        android:text="00:50"
        android:textAllCaps="false"
        android:textColor="#737A91"
        android:textSize="15sp" />

    <CheckBox
        android:id="@+id/checkBoxVideoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:visibility="gone"
        android:clickable="false" />


</LinearLayout>
