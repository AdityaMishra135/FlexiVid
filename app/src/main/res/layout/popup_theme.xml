<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/PopUpWindowStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/font_title"
        android:text="Select Theme"
        android:textColor="@color/ImageViewAndTextViewColour"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/themeLightGreenPopUpTheme"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_circle"
            android:src="@drawable/icon_circle"
            android:tint="@color/light_green" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/themeYellowPopUpTheme"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/icon_circle"
            android:tint="@color/yellow" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/themeLightBluePopUpTheme"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/icon_circle"
            android:tint="@color/light_blue" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/themeLightRedPopUpTheme"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/icon_circle"
            android:tint="@color/light_red" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/themePinkPopUpTheme"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/icon_circle"
            android:tint="@color/pink" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/themePurplePopUpTheme"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/icon_circle"
            android:tint="@color/purple" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/themeLightOrangePopUpTheme"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/icon_circle"
            android:tint="@color/light_orange" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/themeBluePopUpTheme"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/icon_circle"
            android:tint="@color/deep_blue" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/themeLightBrownPopUpTheme"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/icon_circle"
            android:tint="@color/light_brown" />

    </LinearLayout>


</LinearLayout>


